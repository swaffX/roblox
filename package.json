{
  "name": "roblox-ai-coder-plugin",
  "version": "1.0.0",
  "description": "AI-powered coding assistant plugin for Roblox Studio with multi-AI API support",
  "author": "swxff",
  "license": "MIT",
  "scripts": {
    "build": "build.bat",
    "watch": "watch.bat",
    "install-plugin": "powershell -Command \"New-Item -ItemType Directory -Path $env:LOCALAPPDATA\\Roblox\\Plugins -Force -ErrorAction SilentlyContinue; Copy-Item plugin.rbxm -Destination $env:LOCALAPPDATA\\Roblox\\Plugins\\AI-Coder-Plugin.rbxm -Force\"",
    "dev": "build.bat",
    "clean": "powershell -Command \"Remove-Item plugin.rbxm -ErrorAction SilentlyContinue\""
  },
  "keywords": [
    "roblox",
    "plugin",
    "ai",
    "coder",
    "assistant",
    "openai",
    "claude",
    "gemini"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/swxff/roblox-ai-coder-plugin.git"
  }
}
